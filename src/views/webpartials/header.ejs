<!-- header -->
<div class="header">
	<div class="agile-top-header">
		<div class="logo">
			<h1><a href="/">Uz<span>la</span>ş Ya<span>zı</span>lım </a></h1>
		</div>
		<!-- navigation -->
		<div class="top-left">
			<div class="top-icons">
				<ul>
					<li><a target="_blank" href="<%- socials[0].socialmedia_link %> "><i class="fa fa-instagram" aria-hidden="true"></i>İnstagram </a></li>
					<li><a target="_blank" href="<%- socials[1].socialmedia_link %> "><i class="fa fa-facebook" aria-hidden="true"></i>Facebook </a></li>
					<li><a target="_blank" href="<%- socials[2].socialmedia_link %> "><i class="fa fa-twitter" aria-hidden="true"></i>Twitter </a></li>
					<li><a target="_blank" href="https://wa.me/<%- socials[3].socialmedia_link %> "><i class="fa fa-phone"></i>Whatsapp</a></li>
				</ul>
			</div>
			<div class="top-nav">
				<nav class="navbar navbar-default">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
								
					</div>
					<!-- navbar-header -->
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
						 <nav class="linkEffects linkHoverEffect_2">
							<ul>
								<li><a href="/" data-link-alt="anasayfa" class="active"><span>Anasayfa</span></a></li> 
								<li><a href="#services" data-link-alt="servisler" class="scroll"><span>Servisler</span></a></li> 
								<li><a href="#gallery" data-link-alt="Galeri" class="scroll"><span>Galeri</span></a></li> 
								<li><a href="#special" data-link-alt="Özel ürünler" class="scroll"><span>Özel Ürünler</span></a></li> 
								<li><a href="#clients" data-link-alt="Yorumlar" class="scroll"><span>Yorumlar</span></a></li> 
								<li><a href="#contact" data-link-alt="İletişim" class="scroll"><span>İletişim</span></a></li> 
							</ul>
						</nav>
					</div>
					<div class="clearfix"> </div>	
				</nav>
			</div>
			<div class="clearfix"> </div>	
			<!-- //navigation -->
		</div>
	</div>
	<div class="slider">
	    <!-- Slideshow 3 -->
	    <ul class="rslides" id="slider">
			<% sliders.forEach(slider => { %>
				<li>	
					<img src="/web/sliders/<%- slider.slider_resim %>" alt="<% slider.slider_baslik+' resim' %> ">
						<div class="slider-info">
							<h4><%- slider.slider_baslik %></h4>
							<p><%- slider.slider_altaciklama %></p>
							<div class="button">
								<a href="#" data-toggle="modal" data-target="#<%-slider._id%> ">Daha Fazla<span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
							</div>
						</div>
				</li>
			<% }) %>
	    </ul>
    </div>	
</div>

<% sliders.forEach(slider => { %>
	
	<!-- Modal -->
	<div class="modal fade" id="<%-slider._id%>" tabindex="-1" role="dialog" >
		<div class="modal-dialog">
		<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4><%- slider.slider_baslik %> </h4>
							<img src="/web/sliders/<%- slider.slider_resim %>" alt="Food" />
							<span><%- slider.slider_more %> </span>
				</div>
			</div>
						
		</div>
	</div>
	<!-- //Modal -->
<% }) %>
<!-- //header -->