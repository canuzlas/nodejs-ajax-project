<div class="mt-5 mb-5">
    <form id="updatesliderform" enctype="multipart/form-data" method="POST" action="/admin/management/logged/updateslider/<%-slider._id%> " >
        <div class="row">
            <div class="form-group col-sm-6">
                <label for="exampleInputEmail1">Slider Başlık</label>
                <input id="slider_baslik" type="text" name="slider_baslik" class="form-control"
                    placeholder="Email Adresiniz" value="<%-slider.slider_baslik %> ">
            </div>
            <div class="form-group col-sm-6">
                <label for="exampleInputEmail1">Slider Alt Açıklama</label>
                <input id="slider_altaciklama" type="text" name="slider_altaciklama" class="form-control"
                    placeholder="Kullanıcı Adınız" value="<%- slider.slider_altaciklama %> ">
            </div>

            <div align="center" class="form-group col-sm-6">
                <img  width="200" height="100" src="/web/sliders/<%- slider.slider_resim %>">
                <input id="slider_resim" type="file" name="slider_resim" class="form-control">
            </div>
            
            <div class="form-group col-sm-12">
                <label for="exampleInputPassword1">Slider Daha Fazla:</label>
                 <textarea name="slider_more" id="slider_more" cols="40" rows="10"><%- slider.slider_more %> </textarea>
            </div>
        </div>
        <div class="row ">
            <div class="form-group col-sm-4 offset-sm-4 ">
                <button id="sliderupdate" type="button" class="btn btn-primary">Güncelle</button>
                <div>
                </div>
    </form>
</div>

